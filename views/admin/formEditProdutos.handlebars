<h1 style="text-align: center;">Editar produtos </h1>
<div class="card">
    {{#each erros}}
    
    <div class="alert alert-danger">{{texto}}</div>
    {{else}}

    {{/each}}
    <div class="card-body">
        <form action="/admin/produtos/editar/{{produto.id}}" method="post" class="m-3" >
            <label for="nome">Novo Produto :</label>
            <input type="text"  placeholder="{{produto.nome}}" name="nome" class="form-control mt-2">
            <label for="slug">Novo Slug :</label>
            <input type="text" placeholder="{{produto.slug}}" name="slug" class="form-control mt-2">
            <label for="detalhes">Novos Detalhes :</label>
            <input type="text" placeholder="{{produto.detalhes}}" name="detalhes" class="form-control mt-2">
            <label for="preco">Novo Preço :</label>
            <input type="number" class="form-control mt-2" name="preco" placeholder="{{produto.preco}}" step="0.01">
            <label for="estoque">Atualizar Estoque: </label>
            <input type="number" class="form-control mt-2" name="estoque" placeholder="{{produto.estoque}}">
            <label for="img">Novo Link da imagem: </label>
            <input type="url" name="img" placeholder="{{produto.image}}" class="form-control mt-2">
            <button type="submit" class="btn btn-success mt-4">Aplicar alterações</button>
        </form>
    </div>
</div>