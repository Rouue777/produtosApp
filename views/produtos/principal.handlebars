<h1 style="text-align: center;" class="mt-2">Todos Produtos</h1>
<hr>


<div class="container">
<div class="row mt-2">

{{#each produtos}}

<div class="col-md-4">
  <a href="/produtos/detalhes/{{slug}}">
  <div class="card mb-4 shadow-sm" style="height: 600px; border: 2px solid #333">
    <img src="{{imagem}}" class="card-img-top" alt="{{nome}}" style="height: 350px; object-fit: cover;">
    <div class="card-body">
      <h5 class="card-title text-center">{{this.nome}}</h5>
      <p class="card-text"><strong>Preço:</strong> R$ {{preco}}</p>
      <p class="card-text"><strong>Estoque:</strong> {{estoque}} unidades</p>
      <div class="d-flex justify-content-between">   
      </div>
    </div>
  </div>
  </a>
</div>

{{else}}
<h1 class="mt-2">Nenhum produto á ser exibido</h1>
{{/each}}
</div>
</div>
